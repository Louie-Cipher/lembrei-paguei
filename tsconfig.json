{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@routes/*": ["src/routes/*"],
			"@screens/*": ["src/screens/*"],
			"@components/*": ["src/components/*"]
		},
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}
